<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <!-- bootstrap -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" 
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <!-- CSS -->
        <link rel="stylesheet" href="/styles/main.css">
        <title>ForkThisRecipe</title>
    </head>

    <body>
        <div id="main-container">
            <div id="header">
                <h1>ForkThisRecipe</h1>
                <h2>Hello, Guest</h2>
                <div id="menu-bar">
                    <form style="margin-left: 15px; width: 20%;" action="/" method="POST">
                        <!-- color indicating which page the user is on -->
                        <button style="color: rgb(19, 157, 255);">Recipes</button>
                    </form>
                    <form style="margin-left: 15px; width: 30%;" action="/submit" method="POST">
                        <button>Submit a Recipe</button>
                    </form>
                    <form style="margin-left: 40px; width: 20%;" action="/login" method="POST">
                        <button>Log In</button>
                    </form>
                    <form style="margin-left: 0px; width: 20%" action="/about" method="POST">
                        <button>About</button>
                    </form>
                    <div id="blank"></div>
                    <form action="/search" method="POST">
                        <!-- bootstrap search icon -->
                        <input type="text" id="search" name="search" placeholder=" Find a recipe...">
                        <button type="submit" id="search-icon"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                            <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0"/>
                        </svg></button>
                    </form>
                </div>
            </div>
            <div id="content">
                <h2><%= recipe.title %></h2>
                <h3>Ingredients</h3>
                <p><%= recipe.ingredients %></p>
                <h3>Instructions</h3>
                <p><%= recipe.instructions %></p>

                <h3>Comments</h3>
                <ul>
                    <% comments.forEach(c => { %>
                        <li><strong><%= c.rating %>/5</strong> - <%= c.text %></li>
                    <% }) %>
                </ul>

                <form action="/recipes/<%= recipe.id %>/comments" method="post">
                    <label for="rating">Rating:</label>
                    <input type="number" name="rating" id="rating" min="1" max="5" required>
                    <label for="text">Comment:</label>
                    <textarea name="text" id="text" required></textarea>
                    <button type="submit">Add Comment</button>
                </form>
            </div>
        </div>
    </body>
</html>